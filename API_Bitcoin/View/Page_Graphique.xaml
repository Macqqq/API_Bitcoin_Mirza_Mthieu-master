<UserControl x:Class="API_Bitcoin.View.Page_Graphique"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid Background="AliceBlue">
        <!-- Configuration des colonnes et des lignes du Grid -->
        <Grid Grid.Row="0" Grid.Column="0" Name="Grid_Courbe1">
            <!-- Configuration des lignes du Grid_Courbe1 -->
            <Label Content="Bitcoin :" Height="50" Width="200" FontSize="20" VerticalAlignment="Top" HorizontalAlignment="Center"/>

            <!-- LiveCharts CartesianChart pour le graphique Bitcoin -->
            <lvc:CartesianChart Name="ChartBitcoin" HorizontalAlignment="Right" Width="1500"/>
        </Grid>

        <!-- Les autres Grids pour Ethereum, XRP, Solana, etc. -->
        <!-- ... -->
    </Grid>
</UserControl>